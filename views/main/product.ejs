<head>
  <style>
    .product-container {
      margin: 5rem 2rem;
    }
    .product-1 {
      display: grid;
      grid-template-columns: auto auto;
    }
    img {
      width: 650px;
    }
  </style>
</head>

<% layout('layout') -%>

<div class="product-container">
  <div class="product-1">
    <div class="product-2">
      <img src="<%= product.image %> " alt="" />
    </div>
    <div class="product-3">
      <h3><%= product.name %></h3>
      <h3>$<%= product.price %></h3>
      <form method="post">
        <div class="btn-group" role="group" aria-label="...">
          <input type="hidden" name="quantity" id="quantity" value="1" />
          <button type="button" id="minus" class="btn btn-default">-</button>
          <button type="button" id="total" class="btn btn-default">1</button>
          <button type="button" id="plus" class="btn btn-default">+</button>
        </div>
        <div class="form-group">
          <input
            type="hidden"
            name="product_id"
            id="quantity"
            value="<%= product._id %> "
          />
          <input
            type="hidden"
            name="priceHidden"
            id="priceHidden"
            value="<%= product.price %> "
          />
          <input
            type="text"
            name="item"
            class="form-control"
            value="<%= product.name %> "
          />
          <input
            type="text"
            name="priceValue"
            id="priceValue"
            class="form-control"
            value="<%= product.price %> "
          />
        </div>
        <% if (user) { %>
        <button type="submit" class="btn btn-primary btn-lg">
          Add to cart
        </button>
        <% } else { %>
        <a href="/signup" class="btn btn-warning btn-lg"
          >Signup or login first to start buying!</a
        >
        <% } %>
      </form>
    </div>
  </div>
</div>
