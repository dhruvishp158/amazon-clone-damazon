<% layout('layout') -%>
<div class="container">
  <div class="row">
    <div class="col-lg-9">
      <% if (message.length>0) { %>
      <div class="alert alert-success alert-dismissible">
        <button class="close" data-dismiss="alert" aria-label="close">
          <span aria-hidden="true">&times;</span>
        </button>
        <%= message %>
      </div>
      <% } %> <% for( let i = 0; i < foundCart.items.length; i++ ) { %>

      <div
        class="list-group"
        style="margin: 1rem; box-shadow: 3px 6px 15px -11px black;"
      >
        <span class="list-group-item">
          <div class="row">
            <div class="col-md-3">
              <span>
                <img
                  src="<%= foundCart.items[i].item.image %> "
                  alt=""
                  class="product-image"
                />
              </span>
            </div>
            <div class="col-md-3">
              <p class="list-group-item-heading">
                <%= foundCart.items[i].item.name %>
              </p>
            </div>

            <div class="col-md-3">
              <p>
                <%= foundCart.items[i].quantity %>
              </p>
              <p>
                $<%= foundCart.items[i].price %>
              </p>
            </div>
            <div class="col-md-3">
              <form action="/remove" method="post">
                <input
                  type="hidden"
                  name="item"
                  value="<%= foundCart.items[i]._id %>"
                />
                <input
                  type="hidden"
                  name="price"
                  value="<%= foundCart.items[i].price %> "
                />
                <button type="submit" type="button" style="padding: 3px 1rem;">
                  Remove
                </button>
              </form>
            </div>
          </div>
        </span>
      </div>

      <% } %>
    </div>
    <div class="3"></div>
    <div class="3"></div>
  </div>
</div>
